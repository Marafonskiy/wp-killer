doctype html
head
  title Create User

  link(rel="stylesheet" href="css/main.css")
body
  - var recentPost = posts[posts.length - 1];

  .menu
    .nav-container
      .logo: img(src="img/iso_logo_new.png")
      nav
        ul
          each link in links
            li: a(href=link.path) #{link.title}

  header#main-header(
    style=`background: url(${recentPost.thumb}) center center / cover no-repeat #eee;`
  )

    .recent-post-container
      h2 #{recentPost.title}

  section
    h3 Top posts
    each post in posts
      article
        header
          h3 #{post.title}
          div !{post.content}
          p#firstParagraph: a(href="post/" + post.id) Read More
          br
  footer
    div 2017 Â© It's copyright

  script(src="js/main.js")
